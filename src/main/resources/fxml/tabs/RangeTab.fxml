<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import org.controlsfx.control.RangeSlider?>

<?import javafx.scene.control.Tab?>
<Tab text="Range" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
     fx:controller="com.damaru.midispawn.controller.RangeController">
    <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
              prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111"
              xmlns:fx="http://javafx.com/fxml/1">
        <columnConstraints>
            <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0"
                               percentWidth="0.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="1.0" valignment="TOP" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="130.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="130.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="130.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <children>
            <ButtonBar GridPane.columnSpan="3" GridPane.halignment="LEFT" GridPane.valignment="TOP"
                       GridPane.vgrow="NEVER">
                <buttons>
                    <Button alignment="CENTER" mnemonicParsing="false" onAction="#quit" text="Quit"/>
                    <Button alignment="CENTER" layoutX="20.0" layoutY="26.0" mnemonicParsing="false"
                            onAction="#generate" text="Play"/>
                    <ComboBox fx:id="instrument" prefWidth="150.0"/>
                </buttons>
            </ButtonBar>
            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="Pitch" GridPane.halignment="RIGHT"
                   GridPane.rowIndex="1" GridPane.valignment="CENTER">
                <GridPane.margin>
                    <Insets right="10.0"/>
                </GridPane.margin>
            </Label>
            <RangeSlider fx:id="pitchStart" blockIncrement="1.0" highValue="72.0" lowValue="60.0"
                         majorTickUnit="12.0" max="127.0" minHeight="120.0" minorTickCount="1"
                         orientation="VERTICAL" showTickMarks="true" GridPane.columnIndex="1"
                         GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
            <RangeSlider fx:id="pitchEnd" blockIncrement="1.0" highValue="72.0" lowValue="60.0" majorTickUnit="12.0"
                         max="127.0" minHeight="120.0" minorTickCount="1" orientation="VERTICAL"
                         showTickMarks="true" GridPane.columnIndex="2" GridPane.halignment="CENTER"
                         GridPane.rowIndex="1"/>
            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="195.0" layoutY="202.0" text="Velocity"
                   GridPane.halignment="RIGHT" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets right="10.0"/>
                </GridPane.margin>
            </Label>
            <RangeSlider fx:id="velocityStart" blockIncrement="1.0" highValue="120.0" layoutX="245.0"
                         layoutY="144.0" lowValue="60.0" majorTickUnit="12.0" max="127.0" minHeight="120.0"
                         minorTickCount="1" orientation="VERTICAL" showTickMarks="true" GridPane.columnIndex="1"
                         GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
            <RangeSlider fx:id="velocityEnd" blockIncrement="1.0" highValue="120.0" layoutX="325.0" layoutY="277.0"
                         lowValue="60.0" majorTickUnit="12.0" max="127.0" minHeight="120.0" minorTickCount="1"
                         orientation="VERTICAL" showTickMarks="true" GridPane.columnIndex="2"
                         GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="185.0" layoutY="256.0" text="Duration"
                   GridPane.halignment="RIGHT" GridPane.rowIndex="3">
                <padding>
                    <Insets right="10.0"/>
                </padding>
            </Label>
            <RangeSlider fx:id="durationStart" blockIncrement="1.0" highValue="600.0" layoutX="326.0"
                         layoutY="216.0" lowValue="400.0" majorTickUnit="12.0" max="800.0" min="10.0"
                         minHeight="120.0" minorTickCount="1" orientation="VERTICAL" showTickMarks="true"
                         GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
            <RangeSlider fx:id="durationEnd" blockIncrement="1.0" highValue="400.0" layoutX="326.0" layoutY="313.0"
                         lowValue="200.0" majorTickUnit="12.0" max="800.0" min="10.0" minHeight="120.0"
                         minorTickCount="1" orientation="VERTICAL" showTickMarks="true" GridPane.columnIndex="2"
                         GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="183.0" layoutY="285.0" text="Seconds"
                   GridPane.halignment="RIGHT" GridPane.rowIndex="4">
                <padding>
                    <Insets right="10.0"/>
                </padding>
            </Label>
            <Slider fx:id="seconds" blockIncrement="1.0" majorTickUnit="10.0" max="120.0" minorTickCount="1"
                    showTickLabels="true" showTickMarks="true" value="10.0" GridPane.columnIndex="1"
                    GridPane.columnSpan="2" GridPane.rowIndex="4">
                <GridPane.margin>
                    <Insets left="20.0" right="20.0"/>
                </GridPane.margin>
            </Slider>
        </children>
    </GridPane>
</Tab>